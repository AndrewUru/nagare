<div id="cookieConsent" class="cookie-consent-overlay" style="display: none;">
  <div class="cookie-consent-container">
    <div class="cookie-consent-content">      
      <div class="cookie-text">
        <h3>üç™ Configuraci√≥n de Cookies</h3>
        <p>
          Utilizamos cookies esenciales para el funcionamiento del sitio y cookies opcionales para mejorar tu experiencia de navegaci√≥n.
          <br>
          <a href="/privacy-policy" target="_blank" rel="noopener noreferrer" class="privacy-link">
            Ver nuestra pol√≠tica de privacidad
          </a>
        </p>
      </div>
    </div>

    <div class="cookie-actions">
      <button id="settingsCookies" class="btn-settings" title="Configurar cookies">
        Configurar
      </button>
      
      <div class="main-buttons">
        <button id="rejectCookies" class="btn-reject">
          Solo esenciales
        </button>
        <button id="acceptCookies" class="btn-accept">
          Aceptar todas
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal de configuraci√≥n detallada -->
<div id="cookieSettings" class="cookie-settings-modal" style="display: none;">
  <div class="modal-backdrop"></div>
  <div class="modal-content">
    <div class="modal-header">
      <h3>Configuraci√≥n de Cookies</h3>
      <button id="closeSettings" class="close-btn" title="Cerrar">√ó</button>
    </div>
    
    <div class="modal-body">
      <div class="cookie-category">
        <div class="category-header">
          <h4>Cookies Esenciales</h4>
          <div class="toggle-switch disabled">
            <input type="checkbox" id="essential" checked disabled>
            <label for="essential"></label>
          </div>
        </div>
        <p>Necesarias para el funcionamiento b√°sico del sitio. No se pueden desactivar.</p>
      </div>
      
      <div class="cookie-category">
        <div class="category-header">
          <h4>Cookies de An√°lisis</h4>
          <div class="toggle-switch">
            <input type="checkbox" id="analytics">
            <label for="analytics"></label>
          </div>
        </div>
        <p>Nos ayudan a entender c√≥mo interact√∫as con nuestro sitio para mejorarlo.</p>
      </div>
      
      <div class="cookie-category">
        <div class="category-header">
          <h4>Cookies de Marketing</h4>
          <div class="toggle-switch">
            <input type="checkbox" id="marketing">
            <label for="marketing"></label>
          </div>
        </div>
        <p>Se utilizan para mostrarte anuncios m√°s relevantes a tus intereses.</p>
      </div>
    </div>
    
    <div class="modal-footer">
      <button id="saveSettings" class="btn-save">Guardar Configuraci√≥n</button>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const status = localStorage.getItem("cookieConsentStatus");
    const consentBox = document.getElementById("cookieConsent");
    const settingsModal = document.getElementById("cookieSettings");

    // Mostrar banner si no hay consentimiento previo
    if (!status && consentBox) {
      // Animaci√≥n de entrada suave
      setTimeout(() => {
        consentBox.style.display = "flex";
        consentBox.classList.add("show");
      }, 1000);

      // Botones principales
      const acceptBtn = document.getElementById("acceptCookies");
      const rejectBtn = document.getElementById("rejectCookies");
      const settingsBtn = document.getElementById("settingsCookies");

      // Aceptar todas las cookies
      if (acceptBtn) {
        acceptBtn.onclick = () => {
          localStorage.setItem("cookieConsentStatus", "accepted");
          localStorage.setItem("cookiePreferences", JSON.stringify({
            essential: true,
            analytics: true,
            marketing: true
          }));
          hideConsentBox();
          showNotification("‚úÖ Configuraci√≥n guardada. Todas las cookies habilitadas.");
        };
      }

      // Rechazar cookies opcionales
      if (rejectBtn) {
        rejectBtn.onclick = () => {
          localStorage.setItem("cookieConsentStatus", "rejected");
          localStorage.setItem("cookiePreferences", JSON.stringify({
            essential: true,
            analytics: false,
            marketing: false
          }));
          hideConsentBox();
          showNotification("‚úÖ Solo se utilizar√°n cookies esenciales.");
        };
      }

      // Mostrar configuraci√≥n detallada
      if (settingsBtn && settingsModal) {
        settingsBtn.onclick = () => {
          settingsModal.style.display = "flex";
          document.body.style.overflow = "hidden";
          
          // Cargar preferencias existentes
          const prefs = JSON.parse(localStorage.getItem("cookiePreferences") || "{}");
          const analyticsCheckbox = document.getElementById("analytics") as HTMLInputElement | null;
          if (analyticsCheckbox) analyticsCheckbox.checked = prefs.analytics || false;
          const marketingCheckbox = document.getElementById("marketing") as HTMLInputElement | null;
          if (marketingCheckbox) marketingCheckbox.checked = prefs.marketing || false;
        };
      }
    }

    // Configuraci√≥n del modal
    if (settingsModal) {
      const closeBtn = document.getElementById("closeSettings");
      const saveBtn = document.getElementById("saveSettings");
      const backdrop = settingsModal.querySelector(".modal-backdrop");

      // Cerrar modal
      [closeBtn, backdrop].forEach(el => {
        if (el) {
          (el as HTMLElement).onclick = () => closeSettingsModal();
        }
      });

      // Guardar configuraci√≥n personalizada
      if (saveBtn) {
        saveBtn.onclick = () => {
          const preferences = {
            essential: true,
            analytics: (document.getElementById("analytics") as HTMLInputElement | null)?.checked ?? false,
            marketing: (document.getElementById("marketing") as HTMLInputElement | null)?.checked ?? false
          };

          localStorage.setItem("cookieConsentStatus", "custom");
          localStorage.setItem("cookiePreferences", JSON.stringify(preferences));
          
          closeSettingsModal();
          hideConsentBox();
          showNotification("‚úÖ Configuraci√≥n personalizada guardada.");
        };
      }
    }

    // Funciones auxiliares
    function hideConsentBox() {
      if (consentBox) {
        consentBox.classList.add("hide");
        setTimeout(() => {
          consentBox.remove();
        }, 300);
      }
    }

    function closeSettingsModal() {
      if (settingsModal) {
        settingsModal.style.display = "none";
        document.body.style.overflow = "";
      }
    }

    function showNotification(message) {
      const notification = document.createElement("div");
      notification.className = "cookie-notification";
      notification.textContent = message;
      
      document.body.appendChild(notification);
      
      setTimeout(() => notification.classList.add("show"), 100);
      setTimeout(() => {
        notification.classList.remove("show");
        setTimeout(() => notification.remove(), 300);
      }, 3000);
    }
  });
</script>

<style>
  /* Banner principal */
