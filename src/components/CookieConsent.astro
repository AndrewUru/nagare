    padding: 1rem 1.5rem;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    z-index: 10002;
    opacity: 0;
    transform: translateX(100%);
    transition: all 0.3s ease;
  }

  .cookie-notification.show {
    opacity: 1;
    transform: translateX(0);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cookie-consent-container {
      flex-direction: column;
