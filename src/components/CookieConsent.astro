  }

  /* Toggle switches */
  .toggle-switch {
    position: relative;
    width: 50px;
    height: 26px;
  }

  .toggle-switch input[type="checkbox"] {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .toggle-switch label {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #475569;
    border-radius: 26px;
    transition: background 0.2s ease;
  }

  .toggle-switch label:before {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 3px;
    bottom: 3px;
    background: white;
    border-radius: 50%;
    transition: transform 0.2s ease;
  }

  .toggle-switch input:checked + label {
    background: #38bdf8;
  }

  .toggle-switch input:checked + label:before {
    transform: translateX(24px);
  }

  .toggle-switch.disabled label {
    background: #10b981;
    cursor: not-allowed;
  }

  .toggle-switch.disabled label:before {
    transform: translateX(24px);
  }

