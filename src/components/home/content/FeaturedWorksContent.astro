---
import {
  allProjectsData,
  type ProjectDataItem,
} from "../../../data/projectsData";
import FeaturedProjectCard from "../FeaturedProjectCard.astro";
import Button from "../../common/Button.astro";

const featuredProjects: ProjectDataItem[] = allProjectsData.filter(
  (project) => project.isFeatured
);
const projectsUrl = "/experiencias";

function slugify(text: string): string {
  return text
    .toString()
    .toLowerCase()
    .replace(/\s+/g, "-")
    .replace(/[^\w-]+/g, "")
    .replace(/--+/g, "-")
    .replace(/^-+/, "")
    .replace(/-+$/, "");
}
---

<h2 slot="title" class="about-title scroll-target-title">Experiencias Destacadas</h2>

<div class="about-content scroll-target-content featured-works-container">
  {
    featuredProjects.map((project) => {
      const slug = slugify(project.title);
      return (
        <FeaturedProjectCard
          title={project.title}
          homepageSummary={project.homepageSummary}
          imageAlt={project.imageAlt}
          
          slug={slug}
        />
      );
    })
  }

  <div class="button-group">
    <Button
      class="button"
      href={projectsUrl}
      text="Explorar Todas las Experiencias"
      wrapperClass="projects-cta-button"
    />
  </div>
</div>

<style>
  .featured-works-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 696px) {
    .featured-works-container {
      width: 100%;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .button-group {
    display: flex;
    gap: 1rem;
  }
</style>
